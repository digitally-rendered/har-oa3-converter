# Use Python 3.9 as the default toolchain
build --repo_env=PYTHON_BIN_PATH=python3.9

# Show test output
test --test_output=errors

# Build with optimization by default
build -c opt

# Enable verbose failures for tests
test --verbose_failures

# Cache build results
build --disk_cache=~/.bazel/cache

# Handle Poetry and third-party dependencies properly
build --experimental_enable_bzlmod=false

# Enable worker processes for better performance
build --strategy=Genrule=standalone
build --worker_sandboxing

# For macOS specifically
build --macos_minimum_os=12.0
